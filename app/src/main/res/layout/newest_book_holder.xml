<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="23dp">

    <ImageView
        android:id="@+id/new_book_cover"
        android:layout_width="72dp"
        android:layout_height="106dp"
        android:src="@drawable/image_3" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="26dp"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:layout_toEndOf="@id/new_book_cover">

        <TextView
            android:id="@+id/new_book_title"
            style="@style/titleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Yves Saint Laurent" />

        <TextView
            android:id="@+id/new_book_author"
            style="@style/authorStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Suzy Menkes" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:numStars="5"
            tools:rating="4"
            android:progressTint="#FFC41F"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/book_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        android:paddingStart="16dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_bookmark" />

</RelativeLayout>